<div class="container">
    <div class="main-body">

        <!-- Breadcrumb -->
        <div class="container">
            <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-10 p-lr-0-lg mb-3">
                <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
                    Home
                    <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
                </a>

                <span class="stext-109 cl4">
                    Address
                </span>
            </div>
        </div>
        <!-- /Breadcrumb -->
        <div class="row d-flex  justify-content-center">
            <div class="col-md-4 mb-3 d-flex  justify-content-center py-3">
                <h5>Address</h5>
            </div>



        </div>

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin"
                                class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>{{this.User.name}}</h4>
                                <p class="text-secondary mb-1">{{this.User.email}}</p>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div id="addresses" class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">

                        <div class="row">
                            {{!-- <div class="col-sm-3">
                                <h6 class="mb-0">Address</h6>
                            </div> --}}
                            {{!-- <div class="col-sm-9 text-secondary">
                                <h5>Name</h5>
                                <p>Locality</p>
                                <p>Area</p>
                                <p>Landmark</p>
                                <p>Pincode</p>
                            </div> --}}
                            {{#each address}}
                            <div class="col-sm-9 text-secondary d-flex justify-content-between mb-4">
                                <div>
                                    <h5 class="text-dark">{{this.name}}</h5>
                                    <p>{{this.locality}}</p>
                                    <p>{{this.state}}</p>
                                    <p>{{this.landmark}}</p>
                                    <p>{{this.pincode}}</p>
                                </div>

                                <div>
                                    <a class="btn btn-danger text-white"
                                        onclick="deleteAddress('{{this._id}}')">delete</a>
                                </div>

                            </div>
                            {{/each}}


                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-success mr-2" data-bs-toggle="modal" data-bs-target="#addAddressModal"
                                    target="__blank" href="">Add address</a>
                                <a class="btn btn-light mr-2" target="__blank" href="/profile">back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--add new address modal-->
<div class="modal fade" id="addAddressModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">House name</label>
                        <input name="name" type="text" class="form-control" id="name">

                        <label for="recipient-name" class="col-form-label">Locality</label>
                        <input name="locality" type="text" class="form-control" id="locality">

                        <label for="recipient-name" class="col-form-label">State</label>
                        <input name="state" type="text" class="form-control" id="state">

                        <label for="recipient-name" class="col-form-label">Landmark</label>
                        <input name="landmark" type="text" class="form-control" id="landmark">

                        <label for="recipient-name" class="col-form-label">Pincode</label>
                        <input name="pincode" type="number" class="form-control" id="pincode">
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                <button onclick="addAddress()" class="btn btn-success">
                    confirm</button>
                
            </div>
        </div>
    </div>
</div>


