<!-- Shopping Cart -->
<div class="bg0 p-t-75 p-b-85">
	<div id="div-refresh" class="container">
		{{#if total}}
		<div class="row">
			<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
				<div class="m-l-25 m-r--38 m-lr-0-xl">
					<div class="wrap-table-shopping-cart">
						<table class="table-shopping-cart">
							<tr class="table_head">
								<th class="column-1">Product</th>
								<th class="column-2"></th>
								<th class="column-3">Price</th>
								<th class="pr-4 column-4">Quantity</th>
								<th class="column-5">Total</th>
								<th class="column-6"></th>
							</tr>
							{{#each cart}}
							<tr class="table_row">
								<td class="column-1">
									<div class="how-itemcart1">
										<img src="/productsImages/{{this.product.image.[0]}}" alt="IMG">
									</div>
								</td>
								<td class="column-2">{{this.product.name}}</td>
								<td class="column-3">₹ {{this.product.price}}</td>
								<td class="column-4">
									<div class="wrap-num-product flex-w m-l-auto m-r-0">
										<div onclick="changeQuantity('{{this.product._id}}', -1)"
											class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
											<i class="fs-16 zmdi zmdi-minus"></i>
										</div>

										<input disabled class="mtext-104 cl3 txt-center num-product" type="number"
											name="num-product1" value="{{this.quantity}}">

										<div onclick="changeQuantity('{{this.product._id}}', 1)"
											class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
											<i class="fs-16 zmdi zmdi-plus"></i>
										</div>
									</div>
								</td>
								<td class="column-5">₹ {{multiply this.product.price this.quantity}}</td>
								<td class="column-6"><button onclick="deleteCartItem('{{this.product._id}}')"
										class="btn-danger rounded-pill px-4 py-2 mr-3 ml-2">
										Remove
									</button></td>
							</tr>
							{{/each}}
						</table>
					</div>

				</div>
			</div>

			<div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
				<div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
					<h4 class="mtext-109 cl2 p-b-30">
						Cart Totals
					</h4>

					<div class="flex-w flex-t bor12 p-b-13">
						<div class="size-208">
							<span class="stext-110 cl2">
								Subtotal:
							</span>
						</div>

						<div class="size-209">
							<span class="mtext-110 cl2">
								₹ {{total}}.00
							</span>
						</div>
					</div>

					<div class="flex-w flex-t bor12 p-t-15 p-b-30">
						<div class="size-208 w-full-ssm">
							<span class="stext-110 cl2">
								Shipping:
							</span>

						</div>
						<div class="size-209">
							<span class="mtext-110 cl2">₹ 50.00</span>
						</div>

					</div>

					<div class="flex-w flex-t p-t-27 p-b-33">
						{{#if total}}
						<div class="size-208">
							<span class="mtext-101 cl2">
								Total:
							</span>
						</div>

						<div class="size-209 p-t-1">
							<span class="mtext-110 cl2">
								₹ {{add total 50}}
							</span>
						</div>
						{{else}}
						<div class="size-208">
							<span class="mtext-101 cl2">
								Total:
							</span>
						</div>

						<div class="size-209 p-t-1">
							<span class="mtext-110 cl2">
								₹ {{0.00}}
							</span>
						</div>
						{{/if}}
					</div>

					<a href="/checkout"
						class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
						Proceed to Checkout
					</a>
				</div>
			</div>
		</div>
		{{else}}
		<div class="row">
			<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
				<div class="m-l-25 m-r--38 m-lr-0-xl">
					<div class="mb-5">
						<img src="/user_files/images/empty_cart.webp" alt="">
						<h1>Your Cart is currently empty</h1>
						<p>Add some products to your cart
						</p>
						<p>Find some products for your need here : </p>
					</div>
					<a class="btn btn-primary btn wide" href="/">Explore</a>
				</div>
			</div>
		</div>

		{{/if}}
	</div>
</div>

