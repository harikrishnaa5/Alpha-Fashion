<section class="vh-100" style="background-color: #e2e2e2;">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
              <div class="card" style="border-radius: 1rem;">
                <div class="row g-0">
                  <div class="col-md-6 col-lg-5 d-none d-md-block">
                    <img src="https://preview.redd.it/nnluznmmt6291.jpg?width=640&crop=smart&auto=webp&s=e1bfe6d5254801c63f88fc5037b0c1ab9cbc2c72"
                      alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                  </div>
                  <div class="col-md-6 col-lg-7 d-flex align-items-center">
                    <div class="card-body p-4 p-lg-5 text-black">
      
                      <form method="post" action="/login">
      
                        <div class="d-flex align-items-center mb-0 pb-1">
                          
                          <span class="h1 fw-bold mb-0"><img src="/user_files/images/icons/fashion alpha logo.png" style="width:123px" alt=""></span>
                        </div>
      
                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>
      
                        <div class="form-outline mb-4">
                          <input type="email" name="email" id="form2Example17" class="form-control form-control-lg" />
                          <label class="form-label" for="form2Example17">Email address</label>
                        </div>
      
                        <div class="form-outline mb-3">
                          <input type="password" name="password" id="form2Example27" class="form-control form-control-lg" />
                          <label class="form-label" for="form2Example27">Password</label>
                        </div>
      
                        <div class="pt-1 mb-4">
                          <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                        </div>
                        {{#if wrongPassword}}
                        <p class="small text-danger">Invalid Username or Password</p>
                        {{/if}}
                        <a class="small text-muted" href="#!">Forgot password?</a>
                        <p class="mb-3 pb-lg-2" style="color: #393f81;">Don't have an account? <a href="/signup"
                            style="color: #393f81;">Sign up</a></p>
                        
                      </form>
      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
   